#!/bin/gnuplot

set terminal postscript eps size 10, 4 enhanced "Helvetica" 18
set output 'io_output.eps'

set multiplot layout 2, 1
set tmargin 3

set lmargin at screen 0.1

set title "<Without ClusterFetch>" offset -50, 0
set xlabel "Time (sec)"
set ylabel "Total I/O Request Size (KB)"

set obj 1 rect from 0.2, 0 to 7.4, 500 fc lt -1 fs solid 0.25 noborder
set obj 2 rect from 7.5, 0 to 15.8, 500 fc lt -1 fs solid 0.25 noborder
set obj 3 rect from 16.1, 0 to 26.8, 500 fc lt -1 fs solid 0.25 noborder

plot "wopf/iosize_log.txt" using ($1-384.4):($2/1024) lt 1 lc 1 with steps notitle
set xrange[0:30]

unset obj 1
unset obj 2
unset obj 3
unset obj 4
unset obj 5

set style line 1 lt 2 lc rgb "black" lw 1

set arrow 1 from first 0.2, 40000 to first 0.2, screen 0.6 nohead ls 1
set arrow 2 from first 5.1, 40000 to first 7.4, screen 0.6 nohead ls 1
set arrow 3 from first 6.8, 40000 to first 7.5, screen 0.6 nohead ls 1
set arrow 4 from first 9.8, 40000 to first 15.8, screen 0.6 nohead ls 1
set arrow 5 from first 15.4, 40000 to first 16.1, screen 0.6 nohead ls 1
set arrow 6 from first 20, 40000 to first 26.8, screen 0.6 nohead ls 1

set lmargin at screen 0.1

set title "<With ClusterFetch>" offset -51, 0
set xlabel "Time (sec)"
set ylabel "Total I/O Request Size (KB)"

set obj 1 rect from 0.2, 0.1 to 5.1, 40000 fc lt -1 fs solid 0.25 noborder
set obj 2 rect from 6.8, 0.1 to 9.8, 40000 fc lt -1 fs solid 0.25 noborder
set obj 3 rect from 15.4, 0.1 to 20, 40000 fc lt -1 fs solid 0.25 noborder

set logscale y
set yrange[0.1:40000]
set ytics ("0" 0.1, "1" 1, "10" 10, "100" 100, "1000" 1000, "10000" 10000, "40000" 40000)
plot "wipf/iosize_log.txt" using ($1-349):(($2/1024) < 1 ? 0.1 :($2/1024)) lt 1 lc 1 with steps notitle
set xrange[0:30]

unset multiplot
